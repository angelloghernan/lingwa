<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvContentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivContentImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/ivContentImage"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvContentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContentAuthor"
        android:layout_alignStart="@+id/tvContentTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/ivContentImage"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy" />

    <ImageView
        android:id="@+id/ivContentImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/vTweetDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ivContentImage"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvContentAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContentTitle"
        android:layout_alignStart="@+id/tvContentTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="Author" />
</RelativeLayout>